	script.
		$(".button-collapse").sideNav({
			edge : 'left',
			closeOnClick : true
		});
		//$('#sidenav-overlay').remove();

		$('.ol-scale-line').css('left', 'auto');
		$('.ol-scale-line').css('right', '0.5em');
		map.render();

		$('#menu-lateral-btn').hover(function(){
			$(this).find('i').css('color', '#000');
		}, function(){
			$(this).find('i').css('color', '#00bbff');
		});